<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>ABAIC · Welcome</title>
  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  <link href="/images/favicon_io/favicon-32x32.png" rel="icon">
  <link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <!-- font awesome script for icon used-->
  <script src="https://kit.fontawesome.com/d48db10d3a.js" crossorigin="anonymous"></script>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="#"><img class="mb-4" src="/images/favicon_io/favicon.ico" alt="" width="72" height="72"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="#">DAILY DEALS</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/customerservice">CONTACT</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">HELP</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="#">MY ACCOUNT</a>
          </li>
          <li class="nav-item">
              <a href="/checkout"><span class="fa-stack fa-2x has-badge" href="/checkout" bookSelectedCount="<%= addToCartButtonNumber %>">
                <i class="fa fa-circle fa-stack-2x"></i>
                <i class="fa fa-shopping-cart fa-stack-1x fa-inverse"></i>
              </span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/">LOG OUT</a>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <main role="mainSignonHome">
    <div class="homePageBackground">
      <div class="container py-5">
        <div class="row text-center text-white mb-5">
          <div class="col-lg-7 mx-auto">
            <h1 class="display-4">Hello, <%= userFirstName %> </h1>
            <p class="lead mb-0"> <%= todayDate %> </p>
          </div>
        </div>
        <div class ="filter"> 
          <form method="post">
            <label for="category">Filter by -- Category:</label>
              <select name="category" id="category">
                <% for(var i=0;i<categoryList.length;i++) { %>
                <option value="<%= categoryList[i].title %>"><%= categoryList[i].title %></option>
                <% } %>
              </select>
            <label >Author: </label>
            <input type="text" id="author" placeholder="Author" name="author">
            <button type="submit" value="accept" class="btn btn-primary">Submit</button>
          </form> 
        </div>
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <% for(var i=0;i<newListItems.length;i++) { %>
            <div class="Each-book">
              <ul class="list-group shadow">
                <li class="list-group-item">
                  <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                    <div class="media-body order-2 order-lg-1">
                      <h5 class="mt-0 font-weight-bold mb-2"> <%= newListItems[i].title %> </h5>
                      <p class="font-italic text-muted mb-0 small"> <%= newListItems[i].description  %> </p>
                      <div class="d-flex align-items-center justify-content-between mt-1">
                        <h6 class="font-weight-bold my-2"> $<%= newListItems[i].price %> </h6>
                        <ul class="list-inline small">
                          <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                          <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                          <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                          <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                          <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                        </ul>
                      </div>
                    </div><img src="/images/bookImage.jpg" alt="Placeholder Book Image" width="200" class="ml-lg-5 order-1 order-lg-2">
                  </div>
                  <div class="add-to-cart">
                    <form class="" action="/signedonhome" method="post">
                    <button class="default-btn" name= "userAddToCartButton" onclick='funcClick()' value=<%= newListItems[i].bookId %> >Add to Cart</button>
                    </form>
                  </div>
                </li>
              </ul>
            </div>
            <% } %>
          </div>
        </div>
        <a class="btn btn-primary btn-lg btn-block" href="/checkout" role="button">Go to cart</a>
      </div>
  </main>

  <div class="footer-padding"></div>
  <div class="footer">
    <p>©Copyright 2020 Al-Siddique ☪️ Bookstore</p>
  </div>
  </div>

</body>

</html>
